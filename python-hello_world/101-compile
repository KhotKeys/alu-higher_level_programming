#!/bin/bash
if [ -z "$PYFILE" ]; then
    echo "Error: Environment variable PYFILE is not set."
    exit 1
fi
# Check if the specified Python file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: The specified Python file '$PYFILE' does not exist."
    exit 1
fi
# Determine the output filename by appending 'c' to the PYFILE
OUTFILE="${PYFILE}c"
# Compile the Python script to a .pyc file
python -m py_compile "$PYFILE"
if [ $? -eq 0 ]; then
    echo "Compiling $PYFILE ..."
    mv "__pycache__/$PYFILE.cpython-*.pyc" "$OUTFILE"
    rmdir "__pycache__"
    echo "$OUTFILE compiled successfully."
else
    echo "Error: Compilation failed for $PYFILE."
fi
